<div>
	<div class="table-responsive">
		<table class="table table-condensed table table-bordered table-striped">
			<thead>
				<tr>
					<th style="width: 50%">Name</th>
					<th style="width: 25%">Total Price</th>
					<th style="width: 25%">Order Quantity</th>
				</tr>
			</thead>
			{{#each orderList }}
				<tr>
					<td colspan="1">{{this.prodName}}</th>
					<td colspan="1">${{this.totalPrice}}</th>
					<td colspan="1">{{this.totalQuantity}}</th>
				</tr>
			{{else}}
				<tr>
					<th colspan="3">No orders have been placed.</th>
				</tr>
				
			{{/each}}
		</table>
	</div>
	<a role="button" class="btn btn-secondary btn-md" href="/shop">Continue Shopping</a>
</div>
