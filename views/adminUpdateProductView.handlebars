<form action="/admin/product/update" method="post">
<label>Name: </label>
<input type="text" name="name" value={{name}}>
<br/>
<label>Price ($): </label>
<input type="number" name="price" value={{price}}>
<br/>
<label>Stock: </label>
<input type="number" name="stock" value={{stock}}>
<br/>
<br/>
<p>Description:</p>
<textarea type="text" name="description"  rows="4" cols="50">{{description}}</textarea>

<br/>
<input type="hidden" name="id" value="{{id}}">
<br/>
<button type="submit" class="btn btn-secondary">Update Product</button>
</form>
